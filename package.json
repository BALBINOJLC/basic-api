        "eslint-plugin-jest": "^27.2.3",
        "eslint-plugin-local": "^1.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-unused-imports": "^3.0.0",
        "husky": "^8.0.3",
        "jest": "29.6.4",
        "lint-staged": "^14.0.1",
