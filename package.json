{
    "name": "api-sicrus-teams",
    "version": "0.0.73",
    "description": "Api for sicrus teams, a platform for teams to manage their projects and tasks",
    "author": "sicrux.tech",
    "private": true,
    "license": "MIT",
    "scripts": {
        "load:ubuntu": "bash ./scripts/init.bash",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "runDockerCompose": "docker-compose up -d",
        "start:dev": "doppler run -- nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare": "husky install",
        "release": "standard-version",
        "deploy:staging": "yarn test && git checkout staging && git merge develop && yarn build && yarn release && git push --follow-tags origin staging && bash ./scripts/deploy.bash -d staging && git checkout develop && git merge staging && git push",
        "deploy:main": "yarn test && git checkout main && git merge develop && yarn build && yarn release && git push --follow-tags origin main && bash ./scripts/deploy.bash -d production && git checkout develop && git merge main && git push"
    },
    "dependencies": {
        "@casl/ability": "^6.5.0",
        "@nestjs/common": "^10.2.1",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^10.2.1",
        "@nestjs/jwt": "^10.1.0",
        "@nestjs/mapped-types": "^2.0.2",
        "@nestjs/mongoose": "^10.0.1",
        "@nestjs/passport": "^10.0.1",
        "@nestjs/platform-express": "^10.3.1",
        "@nestjs/platform-socket.io": "^10.2.1",
        "@nestjs/swagger": "^7.1.8",
        "@nestjs/websockets": "^10.2.1",
        "@nestjsx/crud": "^5.0.0-alpha.3",
        "@types/sharp": "^0.31.1",
        "axios": "^1.4.0",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "dotenv": "^16.4.5",
        "error-stack-parser": "^2.1.4",
        "express": "^4.18.2",
        "fastest-levenshtein": "^1.0.16",
        "file-type": "^18.5.0",
        "firebase-admin": "^11.10.1",
        "form-data": "^4.0.0",
        "helmet": "^5.0.2",
        "joi": "^17.9.2",
        "lodash": "^4.17.21",
        "moment": "^2.29.4",
        "mongoose": "^7.4.4",
        "mongoose-autopopulate": "^1.1.0",
        "multer": "^1.4.5-lts.1",
        "nestjs-pino": "^3.4.0",
        "node-cron": "^3.0.3",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pino-http": "^8.4.0",
        "pino-pretty": "^10.2.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^5.0.1",
        "rxjs": "^7.8.1",
        "sharp": "^0.32.5",
        "sib-api-v3-typescript": "^2.2.2",
        "standard-version": "^9.5.0",
        "swagger-ui-express": "^5.0.0",
        "twilio": "^4.19.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.4.4",
        "@commitlint/config-conventional": "^18.4.4",
        "@nestjs/cli": "^10.1.14",
        "@nestjs/schematics": "^10.0.2",
        "@nestjs/testing": "^10.2.1",
        "@shelf/jest-mongodb": "^4.1.7",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.4",
        "@types/node": "^20.5.3",
        "@types/passport-jwt": "^3.0.9",
        "@types/passport-local": "^1.0.35",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "eslint": "^8.47.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.1.0",
