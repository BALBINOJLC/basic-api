        "@shopify/shopify-api": "^2.1.0",
        "aws-sdk": "^2.1143.0",
        "axios": "^0.26.0",
        "bcrypt": "^5.0.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "error-stack-parser": "^2.0.6",
