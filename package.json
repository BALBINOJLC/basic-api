    "private": true,
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "runDockerCompose": "docker-compose up -d",
        "start:dev": "rm -r ./dist &&  nest start --watch",
        "start:debug": "rm -r ./dist && nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare": "husky install",
        "release": "standard-version",
        "update:remotes": "git submodule update --init --recursive && git submodule foreach --recursive git pull origin main && sh ./scripts/update-remotes.sh",
        "deploy:staging": "yarn test && git checkout staging && git merge develop && yarn build && yarn release && git push --follow-tags origin staging && bash ./scripts/deploy.bash -d staging && git checkout develop && git merge staging && git push"
    },
    "dependencies": {
        "@casl/ability": "^5.4.3",
